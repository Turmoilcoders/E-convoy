<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_red_light"
                android:text="FAQ"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="________"
                android:textColor="#000"
                android:layout_below="@+id/textView"
                android:textStyle="italic"
                android:id="@+id/faq1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_below="@+id/faq1"
                android:id="@+id/faq2"
                android:text="Q1] Why this application has been developed?"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_below="@+id/faq2"
                android:id="@+id/faq3"
                android:text="Our endevaour has been to identify areas where newer means can help reduce public inconvenice."
                android:textColor="@color/textColorSecondary"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_below="@+id/faq3"
                android:id="@+id/faq4"
                android:text="Q2] What is procedure for lodiging the report?"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_below="@+id/faq4"
                android:id="@+id/faq5"
                android:text="Visit the econvoy app or website and follow the procedure."
                android:textColor="@color/textColorSecondary"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_below="@+id/faq5"
                android:id="@+id/faq6"
                android:text="Q3]What happens after i submit information?"
                android:textColor="#000"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_below="@+id/faq6"
                android:id="@+id/faq7"
                android:text="A digital sign FIR report is generated and mailed to eamil id."
                android:textColor="@color/textColorSecondary"
                android:textStyle="italic"/>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>