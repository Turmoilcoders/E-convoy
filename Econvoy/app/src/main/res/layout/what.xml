<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:gravity="center"
        android:id="@+id/fw1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary"
        android:text="About "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/textColorPrimary"
        android:textAlignment="gravity"
        android:text="A First Information Report (FIR) is a written document prepared by police organization in India, Bangladesh and Pakistan when they recieve information about the commission of a cognizable offence.

 It is generally a complaint lodged with the police by the victim of a cognizable offense or by someone on his or her behalf, but anyone can make such a report either orally or in writing to the police."
        android:id="@+id/fw2"
        android:layout_below="@+id/fw1"
        android:autoText="false" />

</RelativeLayout>