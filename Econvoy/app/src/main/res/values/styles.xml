<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/jet</item>
        <item name="colorControlActivated">@color/textColorPrimary</item>
        <item name="colorControlHighlight">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>

        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="MyMaterialTheme.Base.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

</resources>